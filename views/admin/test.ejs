    function generatePDF() {
      window.jsPDF = window.jspdf.jsPDF;
      var doc = new jsPDF();
      var elementHTML = document.querySelector("#orderDetails");
      doc.html(elementHTML, {
        callback: function(doc) {
          doc.save('order-details.pdf');
        },
        margin: [2, 2, 2, 2],
        autoPaging: 'text',
        x: 0,
        y: 0,
        width: 194,
        windowWidth: 675,
        height: 200
      });
    }
    </script>
  </body>
</html>
